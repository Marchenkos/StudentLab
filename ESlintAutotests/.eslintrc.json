{    
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console":"off",
        "semi-spacing": ["error", {"before": false, "after": true}],
        "quotes": ["error", "double"],
        "no-plusplus":"off",
        "no-unused-vars":"off",
        "max-classes-per-file":"off", 
        "prefer-rest-params":"off", 
        "eqeqeq":"off",
        "no-restricted-syntax": "off",
        "indent":["error", 4],
        "no-trailing-spaces":"error",
        "keyword-spacing":["error", { "overrides": { "if": { "after": true, "before":true}, "for": { "after": true }, "while": { "after": true } } }],
        "no-var":"error",
        "import/prefer-default-export":"off",
        "max-len":["error", 200],
        "linebreak-style": ["error", "windows"]
    }
}